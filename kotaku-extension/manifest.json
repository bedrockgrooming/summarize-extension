{
  "name": "Kotaku Summarizer Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://kotaku.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://www.kotaku.com/"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
