{
  "name": "Kotaku Summarizer Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "https://kotaku.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://www.kotaku.com/"
  ],
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["https://kotaku.com/*"]
    }
  ]
}
